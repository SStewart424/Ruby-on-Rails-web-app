%h1 Listing leagues
.container
  %table
    %thead
      %tr
        %th Title
        %th
        %th
        %th

    %tbody
      - @leagues.each do |league|
        %tr
          %td= league.title
          %td= link_to t('show'), league
          %td= link_to t('edit'), edit_league_path(league)
          %td= link_to t('destroy'), league, method: :delete, data: { confirm: t('confirm') }
  
  %br

  = link_to t(.add_league), new_league_path
